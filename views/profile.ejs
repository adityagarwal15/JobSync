<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: 'Profile | JobSync', pageStyles: 'profile' }) %>

  <!-- Local-only fonts and GSAP for this page -->
  <head>
    <link href="https://fonts.googleapis.com/css2?family=PP+Object+Sans:wght@400;600&family=Druk+Wide+Trial:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.1/gsap.min.js"></script>
  </head>

<body>
  <div class="profile-container">
    <header>
      <h1>My Profile</h1>
      <button id="logout-btn">Logout</button>
    </header>

    <section class="profile-details">
      <h2>Welcome, <span id="username">User</span></h2>
      <p>Email: <span id="email">example@example.com</span></p>
    </section>

    <section class="resume-section">
      <h2>Uploaded Resume</h2>
      <div id="resume-placeholder">
        <p>No resume uploaded.</p>
      </div>
      <input type="file" id="resume-upload" accept=".pdf" />
      <button id="upload-btn">Upload Resume</button>
    </section>
  </div>

  <script src="/js/profile.js"></script>
</body>
</html>

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/jobsync
# For production, use MongoDB Atlas connection string:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobsync?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (existing)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# File Upload Configuration (optional)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# External API Keys (optional - for future integrations)
GEMINI_API_KEY=your-gemini-ai-api-key
JOB_SEARCH_API_KEY=your-job-search-api-key

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info

  <!-- Global Styles -->
  <link rel="stylesheet" href="/css/global.css" />

  <!-- Page-specific Stylesheet (optional) -->
  <% if (typeof pageStyles !== 'undefined') { %>
    <link rel="stylesheet" href="/css/<%= pageStyles %>.css" />
  <% } %>
</head>
